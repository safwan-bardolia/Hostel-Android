<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    tools:context=".admission_activity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        app:srcCompat="@drawable/hostel_pic" />


    <TextView
        android:id="@+id/para"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"


        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/text_with_paragraphs"
        android:textColor="@color/colorWhite"
        android:textSize="18sp" />

    <RadioGroup
        android:id="@+id/radio_grp"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_below="@id/para"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="118dp">

        <RadioButton
            android:id="@+id/dor_radi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/para"
            android:layout_marginTop="1dp"
            android:text="@string/dormitory"
            android:textColor="@color/colorWhite"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/semi_deluxradi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dor_radi"
            android:layout_marginTop="5dp"
            android:text="@string/semidelux"
            android:textColor="@color/colorWhite"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/deluxradi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/semi_deluxradi"
            android:layout_marginTop="5dp"
            android:text="@string/delux"
            android:textColor="@color/colorWhite"
            android:textSize="16sp" />
    </RadioGroup>

    <Button
        android:id="@+id/apply_btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="129dp"
        android:layout_marginRight="129dp"
        android:layout_marginBottom="43dp"
        android:background="#D81B60"
        android:text="Apply"/>>
</RelativeLayout>